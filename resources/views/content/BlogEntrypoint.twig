{% set homepageUrl = services.url.getHomepageURL() %}

<ul class="blog-entrypoint controls-list list-inline">
    {% if services.template.isCurrentTemplate('tpl.category.blog')
        or services.template.isCurrentTemplate('tpl.blog.article')
        or services.template.isCurrentTemplate('tpl.blog.landing')
        or services.template.isCurrentTemplate('tpl.blog.search') %}
        <li class="list-inline-item"><a href="{{ homepageUrl }}"><i class="fa fa-angle-left"></i> {{ trans('Blog::Landing.backToStoreMessage') }}</a></li>
    {% else %}
        <li class="list-inline-item"><a href="{{ landing.url }}">{{ trans('Blog::Landing.entrypointMessage') }}</a></li>
    {% endif %}
</ul>