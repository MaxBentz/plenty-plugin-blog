{% set categoryBreadcrumbs = services.category.getHierarchy() %}

{% extends getPartial('page-design') %}

{% block PartialHead %}
    <title>{{ page.title }} | {{ ceresConfig.header.companyName }}</title>

    <meta name="robots" content="NOINDEX,FOLLOW">
{% endblock %}

{% block PageBody %}

    <div class="blog-wrapper">
        <section class="blog-header">
            <h1 class="blog-category-name">
                {{ page.title }}
            </h1>

            {% if page.type == 'search' %}
                <blog-search is-search-page initial-search-string="{{ searchString }}"></blog-search>
            {% endif %}
        </section>

        <div class="container-max blog-container">

            <div class="row blog-row-small-gutters">
                <div class="col-md-9 blog-col-small-gutters">

                    <blog-list {{ page.type == 'search' ? 'is-search-page' : '' }}
                               :categories="{{ categories | json_encode }}"
                               filters ="{{ filters }}">
                    </blog-list>

                </div>

                <div class="col-md-3 blog-sidebar blog-col-small-gutters">
                    {% if page.type == 'search' %}
                        {% include "Blog::Category.Blog.Partials.Sidebar" with { 'isSearchPage': true } %}
                    {% else %}
                        {% include "Blog::Category.Blog.Partials.Sidebar" %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}