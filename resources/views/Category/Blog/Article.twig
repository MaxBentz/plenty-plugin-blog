{% extends getPartial('page-design') %}

{% block PartialHead %}
    <title>{{ blogPost.data.title }} | {{ ceresConfig.header.companyName }}</title>

    <meta name="description" content="{{ blogPost.data.metaDescription }}">
    <meta name="keywords" content="{{ blogPost.data.metaKeywords }}">

    <meta name="robots" content="{{ metaRobots }}">
{% endblock %}

{% block PageBody %}
    <div class="blog-wrapper">
        <div class="container-max blog-container">

            <div class="row blog-row-small-gutters">
                <div class="col-md-9 blog-posts blog-col-small-gutters">

                    <article class="blog-post">
                        <div class="blog-post-header">
                            <h5 class="blog-category-name">{{ blogPost.data.categoryName }}</h5>
                            <h1 class="blog-post-name">{{ blogPost.data.title }}</h1>

                            <p class="blog-details">
                                <span class="blog-detail blog-detail-date">{{ blogPost.data.publishedAt | date("F j, Y")}}</span>
                                <span class="blog-detail blog-detail-author">by {{ blogPost.data.user.realName }}</span>
                                <span class="blog-detail blog-detail-comments">15 comments</span>
                            </p>
                        </div>

                        {% for blogPreviewImage in blogPost.data.images %}
                            {% if 'title' in blogPreviewImage.type %}
                                <img class="blog-post-image blog-post-image-fullwidth" src="{{ blogPreviewImage.path }}">
                            {% endif %}
                        {% endfor %}

                        <div class="blog-body">
                            {{ blogPost.data.body | raw }}
                        </div>

                    </article>

                </div>

                <div class="col-md-3 blog-sidebar blog-col-small-gutters">
                    {% include "Blog::Category.Blog.Partials.Sidebar" %}
                </div>
            </div>

        </div>
    </div>



{% endblock %}
